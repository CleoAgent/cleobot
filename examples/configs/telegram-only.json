{
  "$schema": "https://cleobot.ai/schema/cleobot.json",
  "meta": {
    "description": "CleoBot with Telegram integration"
  },
  "agents": {
    "defaults": {
      "workspace": "/home/node/.cleobot/workspace",
      "model": {
        "primary": "anthropic/claude-sonnet-4-5",
        "fallbacks": ["anthropic/claude-haiku-4-5"]
      },
      "heartbeat": {
        "every": "30m",
        "model": "anthropic/claude-haiku-4-5"
      }
    }
  },
  "gateway": {
    "mode": "local",
    "auth": {
      "token": "${CLEOBOT_GATEWAY_TOKEN}"
    }
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "dmPolicy": "pairing",
      "groupPolicy": "allowlist",
      "groups": {
        "*": {
          "requireMention": true
        }
      }
    }
  }
}
